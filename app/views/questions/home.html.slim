.container-stylist
  .row
    .large-12.large-centered.columns
      h1.stylist-grey Your style questions answered by our top stylists
  .row
    .large-4.large-centered.columns
      - if current_user
        a.button.button-stylist href=new_question_path Ask a style question
      - else
        a.button.button-stylist data-reveal-id="login-modal" href="#" Ask a style question
  .row
    .large-12.small-12.columns
      .large-6.small-6.columns
        p.title Most Recent
      .large-6.small-6.columns
        p.title Most Popular
      
  - @questions.each do |question|      
    .row
      .large-12.columns
        .large-6.columns
          .row-stylist
            .thumb-stylist
              = image_tag question.image_url
            p
              strong
                = question.title
              br
              = question.description
              br
              .user-name
                | Asked by 
                = display_name(question.user.name)
              .user-time
                = time_ago_in_words(question.created_at)
                |  ago
              .user-replies
                = question.answers.count
                |  replies
              a.button.button-stylist-small href=question_path(question.id) Show
        .large-6.columns
          .row-stylist
            .thumb-stylist
