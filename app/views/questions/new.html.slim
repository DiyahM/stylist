.container-stylist
  .row
    .large-12.columns
      h1.stylist-grey Ask your question below
  .row
    .large-12.columns
      = semantic_form_for @question do |f|
        .row.collapse
          .large-12.columns
            .large-11.columns
              = f.input :title, :input_html => { maxlength:50 }
        .row.collapse
          .large-12.columns
            .large-11.columns
              = f.input :image_url
            .large-1.columns
              input type="filepicker" data-fp-apikey="#{ENV['FILEPICKER_API']}" data-fp-mimetypes="image/*" data-fp-container="modal" data-fp-services="COMPUTER,FACEBOOK,INSTAGRAM,URL,WEBCAM" onchange="$('#question_image_url').val(event.fpfile.url);"
          .row.collapse
            .large-12.columns
              .large-11.columns
                = f.input :description, :input_html => { maxlength:140 }
          .row.collapse
            .large-12.columns
                = f.actions :submit
